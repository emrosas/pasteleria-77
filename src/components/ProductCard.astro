---
interface Props {
  name: string;
  price: number;
  description: string;
}

const { name, price, description} =
  Astro.props;
---

<li class="flex flex-col gap-4">
  <div class="aspect-square bg-brand-2"></div>
  <div>
    <div class="flex items-center justify-between gap-4">
    <h3 class="text-base lg:text-xl font-medium">{name}</h3>
    <h4 class="text-base lg:text-xl font-medium">{price}</h4>
    </div>
    <p class="text-xs lg:text-sm opacity-60">{description}</p>
  </div>
</li>
