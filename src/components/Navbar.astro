---
import { Icon } from "astro-icon/components";
import Navlink from "./ui/Navlink.astro";

const links = [
  {
    label: "Menú",
    url: "/menu",
  },
  {
    label: "Ubicaciones",
    url: "/#ubicaciones",
  },
  {
    label: "Facturación",
    url: "/",
  },
  {
    label: "Contacto",
    url: "#contacto",
  },
];
---

<nav class="py-4 sm:pb-6 sm:pt-8 px-page lg:px-16 sticky top-0 left-0 right-0 w-full bg-brand z-50">
  <div class="flex items-center justify-between">
    <a href="/">
    <Icon name="logo" class="aspect-[14/5] w-24 sm:w-32 lg:w-36 h-full origin-top-left" id="navLogo" />
    </a>
    <menu class="hidden sm:flex gap-4 lg:gap-8 items-center">
      {
        links.map((link) => <Navlink href={link.url} text={link.label} />)
      }
      <Icon name="separator" aria-hidden="true" />
      <Navlink href="https://lapostreria77.com" text="La Postreria 77" />
    </menu>
  </div>
</nav>
