---
import { Image } from "astro:assets";
import { type ImageMetadata } from "astro";
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"div"> {
  image: ImageMetadata;
  address: string;
  phone: string;
  hours: string[];
}

const { image, address, phone, hours } = Astro.props;
---
<script src="../utils/tabs.js"></script>

<div class="grid grid-cols-2 gap-8 location">
  <div class="flex flex-col gap-8">
    <div class="flex flex-col gap-2">
      <h5 class="text-xl font-medium leading-none">Dirección:</h5>
      <p>{address}</p>
    </div>
    <div class="flex flex-col gap-2">
      <h5 class="text-xl font-medium leading-none">Teléfono:</h5>
      <p>{phone}</p>
    </div>
    <div class="flex flex-col gap-2">
      <h5 class="text-xl font-medium leading-none">Horarios:</h5>
      {hours.map((hour) => (
        <p>{hour}</p>
      ))}
    </div>
  </div>
  <div class="relative bg-brand min-h-96 row-start-1 row-span-2 col-start-2 overflow-hidden">
  <Image src={image} alt="Imagen de la sucursal" class="absolute inset-0 object-cover size-full" />
  </div>
  <div class="bg-brand min-h-80"></div>
</div>
