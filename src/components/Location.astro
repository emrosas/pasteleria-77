---
import { Image } from "astro:assets";
import { ImageMetadata } from "astro";

interface Props {
  image: ImageMetadata;
  address: string;
  phone: string;
  hours: string;
}

const { image, address, phone, hours } = Astro.props;
---

<div class="grid grid-cols-2 gap-8">
  <div class="flex flex-col gap-8">
    <div class="flex flex-col gap-2">
      <h5 class="text-xl font-medium leading-none">Dirección:</h5>
      <p>{address}</p>
    </div>
    <div class="flex flex-col gap-2">
      <h5 class="text-xl font-medium leading-none">Teléfono:</h5>
      <p>{phone}</p>
    </div>
    <div class="flex flex-col gap-2">
      <h5 class="text-xl font-medium leading-none">Horarios:</h5>
      <p>{hours}</p>
    </div>
  </div>
  <Image src={image} alt="Imagen de la sucursal" class="bg-brand min-h-40 row-start-1 row-span-2 col-start-2" />
  <div class="bg-brand min-h-40"></div>
</div>
