---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";

interface Props {
  name: string;
  description: string;
  image: string;
  tradicional: boolean;
  anytime: boolean;
  rebanadaAnytime: boolean;
}

const { name, description, image, tradicional, anytime, rebanadaAnytime } =
  Astro.props;
---

<li class="flex flex-col gap-4">
  <Image
    src={image}
    alt={name}
    class="aspect-square"
    width={900}
    height={900}
  />
  <div>
    <div class="mb-2 flex flex-col gap-1 opacity-60 sm:mb-4 sm:gap-2">
      <div class="items-bottom flex gap-[2px] sm:gap-1">
        <Icon name="cake" class="mr-[2px] size-3 flex-shrink-0 sm:mr-2 sm:size-4" />
        <span class="text-[10px] sm:text-sm">Tama√±o</span>
        {tradicional && <span class="text-[10px] sm:text-sm">Tradicional</span>}
        {
          tradicional && anytime && (
            <span class="text-[10px] sm:text-sm">y</span>
          )
        }
        {anytime && <span class="text-[10px] sm:text-sm">Anytime</span>}
      </div>
      {
        rebanadaAnytime && (
          <div class="items-bottom flex gap-[2px] sm:gap-1">
            <Icon
              name="slice"
              class="mr-[2px] size-3 flex-shrink-0 sm:mr-2 sm:size-4"
            />
            <span class="text-[10px] sm:text-sm">Rebanada Anytime</span>
          </div>
        )
      }
    </div>
    <h3 class="text-xs font-medium lg:text-xl">{name}</h3>
    <p class="text-[10px] opacity-60 lg:text-sm">{description}</p>
  </div>
</li>
