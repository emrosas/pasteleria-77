---
//Component Imports
import { Icon } from "astro-icon/components";
import Navlink from "../components/ui/Navlink.astro";

//Functions
const currentYear = new Date().getFullYear();
---

<footer id="contacto" class="p-4 relative z-50">
  <div class="border border-dark p-page flex flex-col gap-8">
    <!--Main links and vertical logo-->
    <div class="flex gap-8 items-center">
      <Icon name="logo-vertical" class="h-28 w-20 text-dark" />
      <div class="flex flex-col gap-4">
        <h4 class="font-medium text-2xl">Información de Contacto</h4>
        <ul class="flex gap-8 flex-wrap">
          <Navlink
            href="/"
            icon="mail"
            text="Mercadotecnia"
            intent="secondary"
          />
          <Navlink
            href="/"
            icon="mail"
            text="Facturaciones"
            intent="secondary"
          />
          <Navlink href="/" icon="mail" text="Compras" intent="secondary" />
          <Navlink
            href="/"
            icon="mail"
            text="Recursos Humanos"
            intent="secondary"
          />
          <Navlink
            href="/"
            icon="phone"
            text="Facturación"
            intent="secondary"
          />
          <Navlink
            href="/"
            icon="arrow"
            text="Aviso de Privacidad"
            intent="secondary"
          />
        </ul>
      </div>
    </div>
    <!--Line separator-->
    <span class="h-[1px] bg-dark" aria-hidden="true"></span>
    <!--Social Media and Rights-->
    <div class="flex justify-between gap-16 items-center">
      <ul class="flex gap-8">
        <li><a href="/"><Icon name="socials/facebook" class="size-8" /></a></li>
        <li>
          <a href="/"><Icon name="socials/instagram" class="size-8" /></a>
        </li>
        <li>
          <a href="/"><Icon name="socials/messenger" class="size-8" /></a>
        </li>
        <li><a href="/"><Icon name="socials/tiktok" class="size-8" /></a></li>
        <li><a href="/"><Icon name="socials/x" class="size-8" /></a></li>
      </ul>
      <span class="font-light opacity-60 text-sm"
        >Todos los derechos Reservados. La Pasteleria de la Postreria 77® {
          currentYear
        }</span
      >
    </div>
  </div>
</footer>
