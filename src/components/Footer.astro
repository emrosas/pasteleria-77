---
//Component Imports
import { Image } from 'astro:assets';
//Icon Imports
import mailIcon from '../assets/icons/mail.svg';
import phoneIcon from '../assets/icons/phone.svg';
import outlinkIcon from '../assets/icons/outlink.svg';
//Social Media Logo Imports
import facebookLogo from '../assets/socials/facebook.svg';
import instagramLogo from '../assets/socials/instagram.svg';
import messengerLogo from '../assets/socials/messenger.svg';
import tiktokLogo from '../assets/socials/tiktok.svg';
import xLogo from '../assets/socials/x.svg';
//Functions
const currentYear = new Date().getFullYear();
---

<footer>
    <div class="footer-comp">
        <div>
            <h4>Información y Contacto</h4>
            <ul class="contact-links-holder">
                
                <li><Image src={mailIcon} alt="An Envelope Icon" width={16}/><a href="/">Mercadotecnia</a></li>
                <li><Image src={mailIcon} alt="An Envelope Icon" width={16}/><a href="/">Facturaciones</a></li>
                <li><Image src={mailIcon} alt="An Envelope Icon" width={16}/><a href="/">Compras</a></li>
                <li><Image src={mailIcon} alt="An Envelope Icon" width={16}/><a href="/">Recursos Humanos</a></li>
                <li><Image src={phoneIcon} alt="A Phone Icon" width={16}/><a href="/">Facturación</a></li>
                <li><Image src={outlinkIcon} alt="An Envelope Icon" width={16}/><a href="/">Aviso de Privacidad</a></li>
            </ul>
        </div>
        <div class="separator-line"/>
        <div class="footer-bottom">
            <ul class="social-media-holder">
                <li><a target="_blank" rel="noopener" aria-label="Facebook" href="/"><Image src={facebookLogo} alt="Social Media Icon" width={32}/></a></li>
                <li><a target="_blank" rel="noopener" aria-label="Instagram" href="/"><Image src={instagramLogo} alt="Social Media Icon" width={32}/></a></li>
                <li><a target="_blank" rel="noopener" aria-label="Messenger" href="/"><Image src={messengerLogo} alt="Social Media Icon" width={32}/></a></li>
                <li><a target="_blank" rel="noopener" aria-label="Tiktok" href="/"><Image src={tiktokLogo} alt="Social Media Icon" width={32}/></a></li>
                <li><a target="_blank" rel="noopener" aria-label="X" href="/"><Image src={xLogo} alt="Social Media Icon" width={32}/></a></li>
            </ul>
            <p>Todos los derechos Reservados. La Postreria Pasteleria de La Postreria 77® {currentYear}</p>
        </div>
    </div>
</footer>

<style>
    footer {
        background-color: #000;
        color: #fff;
        padding: var(--page-padding) calc(var(--page-padding) / 2);

    }
    .footer-comp {
        border: 1px solid #fff;
        padding: var(--page-padding) calc(var(--page-padding) / 2);
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }
    h4 {
        margin-bottom: 1.5rem;
    }
    ul {
        list-style: none;
        padding: 0;
        display: flex;
        gap: 2rem;
        margin: unset;
        flex-wrap: wrap;
    }
    li {
        opacity: 0.6;
        transition: all 0.2s ease-out;
    }
    li:hover {
        opacity: 1;
    }
    a {
        color: #fff;
        text-decoration: none;
        font-weight: 300;
    }
    .contact-links-holder li {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
    .separator-line {
        height: 1px;
        background-color: #fff;
        opacity: 0.35;
    }
    .footer-bottom {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    .social-media-holder li {
        width: 2rem;
    }
    .social-media-holder li img {
        width: 100%;
    }
    .footer-bottom p {
        font-size: 0.8rem;
        font-weight: 300;
        opacity: 0.6;
    }
</style>