---
import Layout from '../layouts/Layout.astro';
import Slider from '../components/Slider.jsx';
import Navbar from '../components/Navbar.astro';

---

<Layout title="La Pasteleria de La Postreria.">
	<Navbar />
	<main>
		<header>
			<div class="header-outline"/>
				<div class="container header-comp">
					<a href="#about" class="see-more">Ver Más</a>
					<img src="/header-image.png" alt="Panqué de nuez" class="header-image">
				</div>
		</header>
		<section id="about">
			<div class="container"></div>
		</section>
		<!-- <Slider client:load /> -->
	</main>
</Layout>

<style>
	header {
		position: relative;
		height: 100dvh;
		width: 100%;
		display: flex;
		align-items: end;
		overflow-x: clip;
	}
	.header-outline {
		position: absolute;
		inset: calc(var(--page-padding) / 2);
		border: 1px solid ;
		z-index: -1;
	}
	.header-comp {
		display: flex;
		align-items: end;
		width: 100%;
	}
	.see-more {
		min-width: 30%;
	}
	.header-image {
		object-fit: cover;
		margin-bottom: -10%;
	}
</style>
