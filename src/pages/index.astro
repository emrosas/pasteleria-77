---
import Layout from '../layouts/Layout.astro';

import Navbar from '../components/Navbar.astro';
import ProducsSlider from '../components/ProductsSlider/ProductsSlider';
import Locations from '../components/Locations/Locations';

import { Image } from 'astro:assets';
import headerImage from '../assets/header-image.png';

---

<Layout title="La Pasteleria de La Postreria.">
	<Navbar />
	<main>
		<header>
			<div class="header-outline-wrap">
				<div class="header-outline">
					<a href="#about" class="see-more">Ver Más <img src="/arrow-down.svg" alt="Arrow Icon"></a>
				</div>
			</div>
			<div class="header-image-holder">
				
				<Image src={headerImage} alt="Panqué de nuez" class="header-image" loading={'eager'}/>
			</div>
		</header>
		<section id="about">
			<div class="container">
				<div class="about-comp">
					<h2>Porque Pastelería</h2>
					<p>Dentro de nuestras sucursales podrás encontrar fácil y rápido, toda la variedad de pasteles de los restaurantes de La Postreria 77, productos exclusivos de La Pastelería, y artículos para decorar tus pasteles.</p>
				</div>
			</div>
		</section>
		<section id="products">
			<div class="container">
				<ProducsSlider client:load />
			</div>
		</section>
		<section id="locations">
			<div class="container">
				<h3>Nuestras Sucursales</h3>
				<Locations client:load />
			</div>
		</section>
	</main>
	<!-- GSAP animation script -->
	<script src="../components/navAnimation.js"></script>
</Layout>

<style>

	/* Header Section */
	header {
		position: relative;
		min-height: 100dvh;
		width: 100%;
		display: flex;
		align-items: end;
		overflow-x: clip;
	}
	.header-outline-wrap {
		position: absolute;
		top: 0;
		left: 0;
		height: 100vh;
		width: 100%;
	}
	.header-outline {	
		position: absolute;
		inset: calc(var(--page-padding) / 2);
		border: 1px solid ;
		padding: calc(var(--page-padding) / 2);
		display: flex;
		align-items: end;
	}
	.header-image-holder {
		position: relative;
		z-index: 1;
		display: flex;
		justify-content: end;
		width: 100%;
		padding-top: 0;
		padding-bottom: 0;
		margin: unset;
		margin-top: 10%;
		pointer-events: none;
	}
	.header-image {
		object-fit: contain;
	}
	.see-more {
		opacity: 0.5;
		display: flex;
		gap: 0.25rem;
		align-items: end;
		color: var(--color-white);
		text-decoration: none;
		text-transform: uppercase;
		transition: all 0.2s ease-out;
	}
	.see-more img {
		width: 1.25rem;
		transition: all 0.3s ease-out;
	}
	.see-more:hover img {
		transform: translatey(0.15rem);
	}
	.see-more:hover {
		opacity: 1;
	}

	/* About Section */
	.about-comp {
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 5rem;
		margin: 5rem 0;
	}
	.about-comp h2 {
		flex-shrink: 0;
		min-width: 40%;
	}

</style>