---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--dark: #000;
	}
	html {
		font-family: system-ui, sans-serif;
		background: var(--dark);
		color: white;
	}
	h1, h2, h3, h4, h5, h6 {
		font-weight: 700;
		margin: unset;
	}
	h1 {
		font-size: 3.5rem;
		text-transform: uppercase;
	}
	p {
		line-height: 2;
		margin: unset;
	}
</style>
